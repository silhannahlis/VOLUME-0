#include <stdio.h>

int main() {
   int i,j,n;
   printf("sayı: ");scanf("%d",&n);
   for(j=0;j<n;j++){
       for(i=0;i<=j;i++){
       printf("%d ",j+1);
   }
   printf("\n");
   }

    return 0;
}

#include <stdio.h>

int main() {
   int i,j,n;
   printf("sayı: ");scanf("%d",&n);
   for(j=0;j<n;j++){
       for(i=0;i<=j;i++){
       printf("%d ",i+1);
   }
   printf("\n");
   }

    return 0;
}

#include <stdio.h>

int main() {
   int i,j,n,a=0;
   printf("sayı: ");scanf("%d",&n);
   for(j=0;j<n;j++){
       for(i=0;i<=j;i++){
           a+=1;
       printf("%d ",a);
   }
   printf("\n");
   }

    return 0;
}

// recursion ile faktoriyel hesaplama
#include <stdio.h>
int faktoriyel(int x);
int main() {
    int x,t;
    printf("TamsayÄ± gir:");scanf("%d",&x);
    
    t=faktoriyel(x);
    printf("TOPLAM: %d",t);

    return 0;
}
int faktoriyel(int x){
    if(x<=1){
        return 1;
    }
    else{
        return(x*faktoriyel(x-1));
    }
}
